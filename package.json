{
  "name": "fnum",
  "type": "module",
  "version": "0.0.0",
  "description": "Count the number and proportion of file extensions",
  "author": {
    "name": "Hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "files",
    "extensions",
    "count",
    "proportion"
  ],
  "bin": {
    "hello-cli": "dist/index.js"
  },
  "scripts": {
    "start": "dist/index.js",
    "dev": "tsup --watch --sourcemap",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "commit": "git-cz",
    "lint": "eslint .",
    "release": "bumpp && npm publish",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.8",
    "@types/node": "^20.12.5",
    "@vitest/coverage-istanbul": "2.1.8",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.0",
    "eslint": "^9.17.0",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.3.5",
    "typescript": "^5.4.4",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
